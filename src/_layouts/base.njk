<!DOCTYPE html>
<html lang="{{ lang }}" dir="{{ dir or 'ltr' }}" data-theme="light">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="ie=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content="{{ meta[lang].description }}">
    <meta name="author" content="{{ meta[lang].title }}">

    <title>
      {% if title %}
        {{ title }} | {{ meta[lang].title }}
      {% else %}
        {{ meta[lang].title }}
      {% endif %}
    </title>

    {% favicons 'src/_assets/svg/favicon.svg', appleIconPadding=0 %}

    <link rel="stylesheet" href="/styles/main.css">
    <link rel="manifest" href="{{ "/site.webmanifest" | locale_url }}"">

    {% if meta.env == 'production' %}
    <script src="/service-worker.js"></script>
    {% endif %}

    <script type="module" src="/polyfills.js" defer></script>
    <script type="module" src="/app.js" defer></script>
  </head>
  <body>
    <div id="app">
      <div class="terminal">
        {% include "partials/_toolbar.njk" %}
        {% include "partials/_navigation.njk" %}
        <main class="window">
          {{ content | safe }}
          {% include "partials/_input.njk" %}
        </main>
      </div>
    </div>
  </body>
</html>
