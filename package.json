    "cssnano": "^6.0.1",
    "dotenv": "^16.3.1",
    "eleventy-plugin-i18n": "^0.1.3",
    "esbuild": "^0.19.4",
    "eslint": "^8.50.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "html-minifier-terser": "^7.2.0",
    "markdown-it": "^13.0.2",
    "markdown-it-attrs": "^4.1.6",
    "markdown-it-link-attributes": "^4.0.1",
